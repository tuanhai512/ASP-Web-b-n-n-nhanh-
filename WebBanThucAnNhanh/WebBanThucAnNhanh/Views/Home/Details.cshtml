                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.GIABAN)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.MOTA)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MOTA)
                        </dd>
                        <p>
                            @Html.ActionLink("Back to List", "Index")
                        </p>
                    </div>
                </div><!-- .col-md-12 close -->
            </div><!-- .row close -->
        </div><!-- .container close -->
    </nav><!-- header close -->
    <div>
        <div class="container">
            <div class="row">
                
                <hr />
               
            </div>
        </div>
    </div>
