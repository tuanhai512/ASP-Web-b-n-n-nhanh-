<header>
    <style>
        .card {
            width: 700px;
            border-radius: 5px;
            padding: 10px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }
        .size-card {
            font-size: 50px;
            padding-bottom: .5rem;
            font-weight: bold;
            line-height: 1.2;
            text-transform: uppercase;
            font-family: Asap;
        }
        .font {
            font-family: Asap;
        }
    </style>
</header>
<body>
    <!--
    header-img start
    ============================== -->
    <section id="hero-area">
        <img class="img-responsive" src="~/Assets/images/header.jpg" alt="">
    </section>
    <!--
